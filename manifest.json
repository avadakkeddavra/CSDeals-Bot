{
  "manifest_version": 2,
  "name": "CSDeals Bot",
  "version": "0.0.1",
  "description" : "Description",
  "permissions": [
    "tabs", // Доступ к объекту Tabs
    "activeTab", // Доступ к объекту ActiveTabs
    "storage",
    "http://csgoback.net/api/*",
    "http://bot.poisk.zp.ua/*"
  ],
    
  "background": {
    "scripts": ["jquery-3.2.1.min.js","background.js"]
  },
    
  "optional_permissions": ["https://ru.cs.deals/*","http://bot.poisk.zp.ua/*","http://csgoback.net/api/extension?extension=csgoroll-bot&type=subscription&subType=loadPrice&service=opskins.com&updateTime=360&opskinsMinSales=0&opskinsOnSales=0"],
  "browser_action": {
    "default_title": "Default Title", // Заголовок, который отображается при наведении
    "default_popup": "popup.html"
  }
}
